<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="4.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.meusegundoappjavafx.HelloController">

    <Label fx:id="lblNome" text="Informe seu nome:"></Label>

    <TextField fx:id="textNome" prefWidth="100" prefHeight="30"></TextField>

    <Button fx:id="btnOK" text="OK" onMouseClicked="#onButtonClicked"></Button>

    <Label fx:id="lblMensagem"></Label>

</VBox>
